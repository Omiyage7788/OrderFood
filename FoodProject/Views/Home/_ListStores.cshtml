@model IEnumerable<FoodProject.Models.Suppliers>

@{
	var count = 0;
}

<style>
	.form-control {
		display: inline-block;
	}
</style>

<div class="text-center form-inline">
	<input id="keyWord" name="keyWord" type="text" class="form-control input-lg" placeholder="搜尋想吃的店家或餐點" />
	<button type="submit" class="btn btn-primary btn-lg">
		<span class="glyphicon glyphicon-search"></span>
	</button>
</div>


<hr />

<h2><strong>所有店家</strong></h2>
<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-3">
			<div class="thumbnail">
				<img src="@Url.Action("GetSupplierImage", new { id = item.SupplierID})" class="shopimg" />
				<div class="caption">
					<h3 class="text-truncate"><strong>@item.SupplierName</strong></h3>
					@*<p>@item.SPhone</p>*@
					<p>@item.SCity@item.SDistrict</p>
					<div>
						@Html.ActionLink("查看詳情", "ListProducts", new { id = item.SupplierID }, new { @class = "btn bg-info btn-block btn-lg" })
					</div>
				</div>
			</div>
		</div>
		<span class="hidden">@(count++)</span>
		if (count % 4 == 0)
		{
			<div class="clearfix"></div>
		}
	}
</div>