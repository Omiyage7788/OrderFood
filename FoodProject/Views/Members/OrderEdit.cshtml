@model FoodProject.Models.Orders

@{
	ViewBag.Title = "修改訂單";
}

<h2></h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4></h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.OrderID)
		@Html.HiddenFor(model => model.OrderDisplay)
		@Html.HiddenFor(model => model.OrderTitle)
		@Html.HiddenFor(model => model.MemberID)
		@Html.HiddenFor(model => model.OrderDate)

		<div class="form-group">
			@Html.LabelFor(model => model.RequiredDate, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.RequiredDate, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.RequiredDate, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ShipVia, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("ShipVia", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.ShipVia, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group" id="shipInfo">
			@Html.LabelFor(model => model.ShipAddress, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ShipAddress, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ShipAddress, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.PayVia, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("PayVia", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.PayVia, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group" hidden>
			@Html.LabelFor(model => model.OrderUrl, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.OrderUrl, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.OrderUrl, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group" hidden>
			@Html.LabelFor(model => model.Rate, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group" hidden>
			@Html.LabelFor(model => model.PayState, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.PayState, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.PayState, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group" hidden>
			@Html.LabelFor(model => model.OrderState, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.OrderState, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.OrderState, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="更新訂單" class="btn btn-primary" />
				<a href="javascript:void(0)" onclick="history.go(-1)" class="btn">返回</a>
			</div>
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	<script>
		$('#ShipVia').on('change', function () {
			if (this.value == "1") {
				$('#shipInfo').prop("hidden", true);
			} else {
				$('#shipInfo').prop("hidden", false);
				if ($('#ShipAddress').val() == '自取')
					$('#ShipAddress').val('');
			}
		});
	</script>
}
