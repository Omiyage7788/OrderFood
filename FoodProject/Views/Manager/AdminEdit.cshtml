@model FoodProject.Models.Administrators

@{
	Layout = "/Views/Shared/_Layout_Manager.cshtml";
	ViewBag.Title = "管理帳號資料";
}

<h2><strong>管理帳號資料</strong></h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.AdminID)
		@Html.HiddenFor(model => model.AdminAuthority)
		@Html.HiddenFor(model => model.AdminAccPwd.AdminID)

		<div class="form-group">
			@Html.LabelFor(model => model.AdminName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
				@Html.ValidationMessageFor(model => model.AdminName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.AdminAccPwd.AdminAccount, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.AdminAccPwd.AdminAccount, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.AdminAccPwd.AdminAccount, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.AdminAccPwd.AdminPassword, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="input-group" style="display: inline-flex">
					@Html.EditorFor(model => model.AdminAccPwd.AdminPassword, new { htmlAttributes = new { @class = "form-control pwd", @type = "password" } })
					<span class="input-group-btn">
						<button class="btn btn-default reveal" type="button"><i class="glyphicon glyphicon-eye-open"></i></button>
					</span>
				</div>
			</div>
			<div class="col-md-offset-2 col-md-10">
				@Html.ValidationMessageFor(model => model.AdminAccPwd.AdminPassword, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="確認修改" class="btn btn-primary" />
				@Html.ActionLink("返回", "AdminDetails", new { id = Model.AdminID }, new { @class = "btn" })
			</div>
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	<script src="~/Scripts/MyScript.js"></script>
	<script>
		$(".reveal").click(pwdDisplay);
	</script>
}
